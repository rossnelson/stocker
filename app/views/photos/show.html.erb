<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @photo.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:filename) %>:</strong></dt>
  <dd><%= image_tag @photo.filename.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source) %>:</strong></dt>
  <dd><%= @photo.source %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unique_usage_right) %>:</strong></dt>
  <dd><%= @photo.unique_usage_right %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unique_usage_right_filename) %>:</strong></dt>
  <dd><%= @photo.unique_usage_right_filename %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shared_usage_right_id) %>:</strong></dt>
  <dd><%= @photo.shared_usage_right_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              photos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_photo_path(@photo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photo_path(@photo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
